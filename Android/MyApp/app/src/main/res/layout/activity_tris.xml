<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/lblTit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="40sp"
            android:textAlignment="center"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="80dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_0_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>

                <Button
                    android:id="@+id/button_0_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>

                <Button
                    android:id="@+id/button_0_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_0_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>

                <Button
                    android:id="@+id/button_0_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>

                <Button
                    android:id="@+id/button_0_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_0_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>

                <Button
                    android:id="@+id/button_0_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris"
                    android:background="@color/colorGrigio"/>

                <Button
                    android:id="@+id/button_0_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_tris" android:background="@color/colorGrigio"/>


            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/lblToccaA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partecipante : "
            android:textAlignment="center"
            android:textSize="40sp">

        </TextView>

        <Button
            android:id="@+id/buttonRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Reset"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>